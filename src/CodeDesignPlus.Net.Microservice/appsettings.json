{
  "AllowedHosts": "*",
  "Core": {
    "AppName": "ms-archetype"
  },
  "PubSub": {
    "UseQueue": true,
    "SecondsWaitQueue": 2
  },
  "Mongo": {
    "Enable": true,
    "ConnectionString": "mongodb://localhost:27017",
    "Database": "db_archetype"
  },
  "Redis": {
    "Instances": {
      "ms-archetype": {
        "ConnectionString": "localhost:6379"
      }
    }
  },
  "RedisPubSub": {
    "Enable": true,
    "ListenerEvents": false,
    "Name": "ms-archetype"
  },
  "Kafka": {
    "Enable": true,
    "ListenerEvents": false,
    "BootstrapServers": "localhost:9092",
    "NameMicroservice": "ms-archetype"
  },
  "EventSourcing": {
    "FrequencySnapshot": 20
  },
  "EventStore": {
    "Servers": {
      "Core": {
        "ConnectionString": "tcp://localhost:1113",
        "User": "admin",
        "Password": "12345678"
      }
    }
  },
  "EventStorePubSub": {
    "Enabled": true,
    "ListenerEvents": true,
    "Group": "ms-archetype"
  },
  "ConnectionStrings": {
    "SqlServer": "Server=127.0.0.1,1433;Database=myDataBase;User Id=sa;Password=FhU8nz771q6D;",
    "EventStore": "ConnectTo=tcp://admin:changeit@localhost:1113; HeartBeatTimeout=500",
    "Mongo": "mongodb://localhost:27017",
    "Redis": "localhost:6379"
  },

  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath like '/health%'"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Category": "Event"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{Message:lj}] [{EscapedException}]{NewLine}",
                "restrictedToMinimumLevel": "Verbose"
              }
            },
            {
              "Name": "GrafanaLoki",
              "Args": {
                "uri": "http://localhost:3100",
                "outputTemplate": "[{AppName}] [{Timestamp:HH:mm:ss} {Level:u3}] [{Message:lj}] [{EscapedException}] {Properties:j} <s:{SourceContext}>{NewLine}",
                "labels": [
                  {
                    "key": "Client",
                    "value": "Microservice"
                  }
                ],
                "propertiesAsLabels": [
                  "AppName",
                  "Category",
                  "MachineName",
                  "ThreadId",
                  "ThreadName",
                  "ProcessId",
                  "ProcessName",
                  "EnvironmentUserName",
                  "Level"
                ]
              }
            }
          ]
        }
      }
    ]
  }

}
